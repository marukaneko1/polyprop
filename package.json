{
  "name": "polyprop",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:marketing": "turbo dev --filter=@polyprop/marketing",
    "dev:trading": "turbo dev --filter=@polyprop/trading",
    "dev:admin": "turbo dev --filter=@polyprop/admin",
    "build": "turbo build",
    "build:marketing": "turbo build --filter=@polyprop/marketing",
    "build:trading": "turbo build --filter=@polyprop/trading",
    "build:admin": "turbo build --filter=@polyprop/admin",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "turbo db:generate --filter=@polyprop/database",
    "db:push": "pnpm --filter @polyprop/database db:push",
    "db:migrate": "pnpm --filter @polyprop/database db:migrate",
    "db:studio": "pnpm --filter @polyprop/database db:studio",
    "db:seed": "pnpm --filter @polyprop/database db:seed",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "prettier": "^3.3.3",
    "turbo": "^2.3.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18"
  }
}
